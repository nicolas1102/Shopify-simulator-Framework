<section class="hero-banner">
  <div class="container hero-banner__image-wrapper">
    <div class="image__container">
      <img
        src="/assets/{{settings['hero-banner'].settings.background_image}}"
        alt="Hero Banner"
        class="hero-banner__image"
        width="100%"
        height="auto"
      >
    </div>
    <button
      class="hero-banner__button"
      onclick="location.href='{{ settings['hero-banner'].settings.button_link }}'"
    >
      {{ settings['hero-banner'].settings.button_text }}
    </button>
  </div>

  <div class="hero-banner__marquee">
    <div class="marquee__wrapper">
      <span class="marquee__container">
        {% comment %} To repeat the component and give a sense of infinity {% endcomment %}
        {% for i in (1..10) %}
          <span class="marquee__text">
            <span class="marquee__star">âœ¦</span>
            <span class="marquee__message">{{ settings['hero-banner'].settings.marquee_text }}</span>
          </span>
        {% endfor %}
      </span>
    </div>
  </div>
</section>
